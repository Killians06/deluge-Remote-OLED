{
  "name": "deluge-extension",
  "private": true,
  "version": "1-beta.0",
  "main": "electron/main.js",
  "engines": {
    "node": ">=21.1.0",
    "yarn": ">=4.5.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "pwa-check": "vite build && [ -f dist/sw.js ] && [ -f dist/manifest.webmanifest ] && echo 'PWA files successfully generated'",
    "lint": "eslint",
    "dev:server": "tsx watch server/streamServer.ts",
    "dev:server:nowatch": "tsx server/streamServer.ts",
    "dev:all": "node ./scripts/gen-env.cjs && concurrently \"npm run dev\" \"npm run dev:server\"",
    "electron:dev": "concurrently --kill-others \"cross-env NODE_ENV=development npm run dev\" \"cross-env NODE_ENV=development npm run dev:server:nowatch\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .\"",
    "electron:build": "npm run build && tsc -p tsconfig.server.json && electron-builder",
    "electron:build:win": "npm run build && tsc -p tsconfig.server.json && electron-builder --win",
    "electron:build:mac": "npm run build && tsc -p tsconfig.server.json && electron-builder --mac",
    "electron:build:linux": "npm run build && tsc -p tsconfig.server.json && electron-builder --linux"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@preact/signals": "^2.0.4",
    "@tailwindcss/vite": "^4.1.4",
    "fuse.js": "^7.1.0",
    "preact": "^10.26.4",
    "preact-router": "^4.1.2",
    "qrcode": "^1.5.3",
    "tailwindcss": "^4.1.4",
    "ws": "^8.18.0",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.1",
    "@preact/preset-vite": "^2.10.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/preact": "^3.2.4",
    "@testing-library/user-event": "^14",
    "@types/node": "^22.15.2",
    "@types/qrcode": "^1.5.5",
    "@types/ws": "^8.5.13",
    "concurrently": "^8.2.2",
    "cross-env": "^10.1.0",
    "cypress": "^14.3.3",
    "cypress-plugin-snapshots": "^1.4.4",
    "electron": "^39.2.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.25.1",
    "eslint-config-preact": "^1.5.0",
    "globals": "^16.0.0",
    "jsdom": "^26.1.0",
    "prettier": "^3.5.3",
    "tsx": "^4.7.0",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.31.1",
    "vite": "^6.3.1",
    "vite-plugin-pwa": "^1.0.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.2",
    "wait-on": "^9.0.3",
    "workbox-build": "^7.3.0",
    "workbox-expiration": "^7.3.0",
    "workbox-precaching": "^7.3.0",
    "workbox-routing": "^7.3.0",
    "workbox-strategies": "^7.3.0",
    "workbox-window": "^7.3.0"
  },
  "packageManager": "yarn@4.9.1",
  "eslintConfig": {
    "extends": "preact"
  },
  "build": {
    "appId": "com.deluge.dex",
    "productName": "DEx - Deluge Toolkit",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-server/**/*",
      "electron/**/*",
      "public/icons/**/*"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "public/icons/icon-512.png"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "public/icons/icon-512.png",
      "category": "public.app-category.music"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "public/icons/icon-512.png",
      "category": "Audio"
    }
  }
}
